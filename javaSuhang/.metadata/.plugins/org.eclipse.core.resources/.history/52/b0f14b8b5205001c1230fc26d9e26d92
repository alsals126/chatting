package code;

import java.io.IOException;
import java.net.DatagramPacket;
import java.net.DatagramSocket;
import java.net.InetAddress;
import java.net.ServerSocket;
import java.net.Socket;
import java.net.SocketException;
import java.net.UnknownHostException;

public class Server {
	public void server(int port) throws IOException {
		/*
		Socket socket = null; // 접속한 Client와 통신하기 위한 Socket
		User user = new User(); // 채팅방에 접속해 있는 Client 관리 객체
		ServerSocket server_socket = null; // Client 접속을 받기 위한 ServerSocket

		int count = 0;
		Thread thread[] = new Thread[10];

		try {
			server_socket = new ServerSocket(port);
			// Server의 메인쓰레드는 게속해서 사용자의 접속을 받음
			while (true) {
				socket = server_socket.accept();

				thread[count] = new Thread(new Receiver(user, socket));
				thread[count].start();
				count++;
			}
		} catch (Exception e) {}*/
		
		DatagramSocket ds = new DatagramSocket(port);
		byte[] data = new byte[65508];
		DatagramPacket dp = new DatagramPacket(data, data.length);
		System.out.println("UDP 서버 대기중");
		while (true) {
			ds.receive(dp);
			String msg = new String(dp.getData()).trim();
			System.out.println(" 보낸 주소  :" + dp.getAddress());
			System.out.println(" 보낸메시지 : " + msg);
		}
	}
	
	public String ip() {
		try {
			InetAddress ip = InetAddress.getLocalHost();
			return ip.getHostAddress();
		} catch (UnknownHostException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
			return null;
		}
	}
}
